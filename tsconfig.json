{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "outDir": "out",
    "lib": ["ES2017", "DOM"],
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": false,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/**"]
}
